<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/avatar_relationship"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:civ_border_color="@color/blue"
        app:civ_border_width="2dp"
        android:padding="5dp"
        ></de.hdodenhof.circleimageview.CircleImageView>

    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_toLeftOf="@id/checkitem"
            android:ellipsize="end"
            android:maxLines="1"
            android:id="@+id/name_relationship"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/name"
            android:textSize="@dimen/verysmallsize"
            android:textStyle="bold"></TextView>


        <TextView
            android:id="@+id/mess"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_relationship"
            android:layout_marginRight="10dp"
            android:text="Ahihi"
            android:textSize="@dimen/verysmallsize"></TextView>
        <CheckBox
            android:id="@+id/checkitem"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content">
        </CheckBox>

    </RelativeLayout>


</LinearLayout>